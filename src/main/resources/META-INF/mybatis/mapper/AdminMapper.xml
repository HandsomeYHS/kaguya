<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akanemurakawa.kaguya.dao.mapper.AdminMapper">
  <resultMap id="BaseResultMap" type="com.akanemurakawa.kaguya.model.entity.Admin">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="admin_name" jdbcType="VARCHAR" property="name" />
    <result column="admin_password" jdbcType="VARCHAR" property="password" />
  </resultMap>
  <sql id="Base_Column_List">
    id, admin_name, admin_password
  </sql>
  <!-- author:HanaeYuuma -->
  <!-- 通过id和密码查询管理，用于管理员账号登录的验证 -->
  <select id="selectByIdAndPassword" parameterType="com.hanaeyuuma.freeblogs.model.Admin" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from freeblogs_admin
    where id = #{id,jdbcType=INTEGER} and admin_password = #{adminPassword,jdbcType=VARCHAR}
  </select>

</mapper>