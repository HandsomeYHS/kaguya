<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akanemurakawa.kaguya.dao.mapper.FriendMapper">
  <resultMap id="BaseResultMap" type="com.hanaeyuuma.freeblogs.model.Friend">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="friend_name" jdbcType="VARCHAR" property="friendName" />
    <result column="friend_link" jdbcType="VARCHAR" property="friendLink" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, friend_name, friend_link
  </sql>
  
  <!-- author: HanaeYuuma -->
  <!-- 修改友情链接 -->
  <update id="updateByUserPrimaryKeySelective" useGeneratedKeys="true" keyProperty="id" parameterType="com.hanaeyuuma.freeblogs.model.Friend">
    update freeblogs_friend
    <set>
      <if test="friendName != null and friendName != ''">
        friend_name = #{friendName,jdbcType=VARCHAR},
      </if>
      <if test="friendLink != null and friendLink != ''">
        friend_link = #{friendLink,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER} and user_id = #{userId,jdbcType=INTEGER}
  </update>
  
  <!-- author: HanaeYuuma -->
  <!-- 添加友情链接 -->
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.hanaeyuuma.freeblogs.model.Friend">
    insert into freeblogs_friend (user_id, friend_name, 
      friend_link)
    values (#{userId,jdbcType=INTEGER}, #{friendName,jdbcType=VARCHAR}, 
      #{friendLink,jdbcType=VARCHAR})
  </insert>
  
  <insert id="insertSelective" parameterType="com.hanaeyuuma.freeblogs.model.Friend">
    insert into freeblogs_friend
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="friendName != null">
        friend_name,
      </if>
      <if test="friendLink != null">
        friend_link,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="friendName != null">
        #{friendName,jdbcType=VARCHAR},
      </if>
      <if test="friendLink != null">
        #{friendLink,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  
  <!-- 以下待使用 -->
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from freeblogs_friend
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from freeblogs_friend
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <update id="updateByPrimaryKey" parameterType="com.hanaeyuuma.freeblogs.model.Friend">
    update freeblogs_friend
    set user_id = #{userId,jdbcType=INTEGER},
      friend_name = #{friendName,jdbcType=VARCHAR},
      friend_link = #{friendLink,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>