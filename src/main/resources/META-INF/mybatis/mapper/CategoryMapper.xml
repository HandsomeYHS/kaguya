<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akanemurakawa.kaguya.dao.mapper.CategoryMapper">
  <resultMap id="BaseResultMap" type="com.hanaeyuuma.freeblogs.model.Category">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="article_id" jdbcType="INTEGER" property="articleId" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="category_name" jdbcType="VARCHAR" property="categoryName" />
  </resultMap>
  <sql id="Base_Column_List">
    id, article_id, user_id, category_name
  </sql>
  
  <!-- author: HanaeYuuma -->
  <!-- 添加分类 -->
  <insert id="insertSelective" parameterType="com.hanaeyuuma.freeblogs.model.Category">
    insert into freeblogs_category
    <trim prefix="(" suffix=")" suffixOverrides=",">
      id,article_id,user_id,
      <if test="categoryName != null">
        category_name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{id,jdbcType=INTEGER}, #{articleId,jdbcType=INTEGER},#{userId,jdbcType=INTEGER},
      <if test="categoryName != null">
        #{categoryName,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  
  <!-- author: HanaeYuuma -->
  <!-- 删除分类 -->
  <delete id="deleteByArticlePrimaryKey" parameterType="java.lang.Integer">
    delete from freeblogs_category
    where article_id = #{articleId,jdbcType=INTEGER}
  </delete>
  
  <!-- author: HanaeYuuma -->
  <!-- 批处理删除分类 -->
  <delete id="batchDeleteByArticlePrimaryKey" parameterType="java.util.List">
    delete from freeblogs_category
    where article_id in
    <foreach collection="list" item="item" open="(" separator="," close=")">
    	#{item}
    </foreach>
  </delete>
  
  <!-- author: HanaeYuuma -->
  <select id="selectByArticlePrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from freeblogs_category
    where article_id = #{articleId,jdbcType=INTEGER}
  </select>
  
  <!-- author: HanaeYuuma --> 
  <!-- 修改分类名称 --> 
  <update id="updateName" parameterType="com.hanaeyuuma.freeblogs.model.Category">
    update freeblogs_category
    set category_name = #{categoryName,jdbcType=VARCHAR}
    where article_id = #{articleId,jdbcType=INTEGER}
  </update>
  
  <!-- 以下待使用 -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from freeblogs_category
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.hanaeyuuma.freeblogs.model.Category">
    insert into freeblogs_category (id, article_id, category_name
      )
    values (#{id,jdbcType=INTEGER}, #{articleId,jdbcType=INTEGER}, #{categoryName,jdbcType=VARCHAR}
      )
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.hanaeyuuma.freeblogs.model.Category">
    update freeblogs_category
    <set>
      <if test="articleId != null">
        article_id = #{articleId,jdbcType=INTEGER},
      </if>
      <if test="categoryName != null">
        category_name = #{categoryName,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.hanaeyuuma.freeblogs.model.Category">
    update freeblogs_category
    set article_id = #{articleId,jdbcType=INTEGER},
      category_name = #{categoryName,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>